<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pedrohlc.android.wirelessout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Manager"
            android:label="@string/title_activity_manager" android:launchMode="singleInstance"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" android:label="@string/title_activity_settings" android:launchMode="singleInstance"></activity>
        
    </application>

</manifest>